    function calculateStats(scores) {
      if (!scores || scores.length === 0) {
        return { accuracy: 0, avgSession: 0, correctNotes: 0, mistakes: 0, sessions: 0, avgSpeed: 0 };
      }

      const totalScore = scores.reduce((sum, s) => sum + (s.score || 0), 0);
      const totalNotes = scores.reduce((sum, s) => sum + (s.total || 0), 0);
      
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      const todayScores = scores.filter(s => {
        const scoreDate = s.timestamp?.toDate ? s.timestamp.toDate() : new Date(s.timestamp);
        return scoreDate >= today;
      });
      
      const todayCorrect = todayScores.reduce((sum, s) => sum + (s.score || 0), 0);
      const todayMistakes = todayScores.reduce((sum, s) => sum + ((s.total || 0) - (s.score || 0)), 0);
      
      return {
        accuracy: totalNotes > 0 ? Math.round((totalScore / totalNotes) * 100) : 0,
        avgSession: scores.length > 0 ? Math.round((totalNotes / scores.length) * 0.5) : 0,
        correctNotes: todayCorrect,
        mistakes: todayMistakes,
        sessions: todayScores.length,
        avgSpeed: 1.8
      };
    }

