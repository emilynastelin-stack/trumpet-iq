    .goal-label {
      font-size: 0.75rem;
      color: rgba(255, 255, 255, 0.5);
      font-weight: 600;
    }

    .add-goal-btn {
      background: rgba(255, 255, 255, 0.05);
      border: 2px dashed rgba(255, 255, 255, 0.2);
