  <script type="module">
  import { renderView } from "/scripts/progress.js";
  import { auth, db, doc, getDoc, setDoc, onAuthStateChanged, signInAnonymously } from '/utils/firebase.js';

    let currentUser = null;

    async function initAuth() {
      // Automatically sign in anonymously if no user signed in
      onAuthStateChanged(auth, (user) => {
        if (user) {
          currentUser = user;
          console.log('Signed in as anonymous user:', user.uid);
          // Now you can load user progress here
          loadUserProgress(user.uid);
        } else {
          signInAnonymously(auth).catch((error) => {
            console.error("Anonymous sign-in failed:", error);
          });
        }
      });
    }

    initAuth();

    async function loadUserProgress(uid) {
  try {
    const userDoc = doc(db, 'users', uid);
    const snapshot = await getDoc(userDoc);
    if (snapshot.exists()) {
      const data = snapshot.data();
      // TODO: Replace filler data in the UI with real data from Firestore
      // Example: updateStats(data)
      console.log('Loaded user progress:', data);
      updateStats(data); // Update UI with loaded data
    } else {
      // If no data, create a default progress document
      const defaultData = {
        accuracy: 0,
        avgSession: 0,
        correctNotes: 0,
        mistakes: 0,
        sessions: 0,
        avgSpeed: 0,
        mastery: {},
        activity: {},
      };
      await setDoc(userDoc, defaultData);
      // TODO: update UI with defaultData
      console.log('Created default user progress:', defaultData);
    }
  } catch (err) {
    console.error('Error loading user progress:', err);
  }
}

let progressData = null;

function updateStats(data) {
  progressData = data;
  // Update hero stats
  document.querySelector('.hero-stat .stat-value').textContent = `${data.accuracy || 0}%`;
  document.querySelector('.hero-stat .stat-label').textContent = 'Accuracy';
  document.querySelectorAll('.hero-stat')[1].querySelector('.stat-value').textContent = `${data.avgSession || 0}min`;
  document.querySelectorAll('.hero-stat')[1].querySelector('.stat-label').textContent = 'Avg Session';

  // Update summary cards
  document.querySelector('.summary-card .summary-value').textContent = data.correctNotes || 0;
  document.querySelector('.summary-card .summary-label').textContent = 'Correct Notes';
  document.querySelectorAll('.summary-card')[1].querySelector('.summary-value').textContent = data.mistakes || 0;
  document.querySelectorAll('.summary-card')[1].querySelector('.summary-label').textContent = 'Mistakes';
  document.querySelectorAll('.summary-card')[2].querySelector('.summary-value').textContent = data.sessions || 0;
  document.querySelectorAll('.summary-card')[2].querySelector('.summary-label').textContent = 'Sessions';
  document.querySelectorAll('.summary-card')[3].querySelector('.summary-value').textContent = `${data.avgSpeed || 0}s`;
  document.querySelectorAll('.summary-card')[3].querySelector('.summary-label').textContent = 'Avg Speed';

  // TODO: Update mastery and activity sections as needed
}

// In loadUserProgress, call updateStats(data) after loading

