    .add-goal-btn:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.3);
      color: rgba(255, 255, 255, 0.8);
    }

    .add-goal-btn:active {
      transform: scale(0.98);
    }

    .add-icon {
      font-size: 1.5rem;
      line-height: 1;
    }

