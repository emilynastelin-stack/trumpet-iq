    .summary-label {
      font-size: 0.7rem;
      color: rgba(255, 255, 255, 0.5);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-weight: 600;
    }

    .panel-subtitle {
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.8rem;
      margin: 0.5rem 0 1.25rem;
    }

    /* Difficult Notes Styles */
    .difficult-notes-scroll {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding: 1rem 0;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
    }

    .difficult-notes-scroll::-webkit-scrollbar {
      height: 8px;
    }

    .difficult-notes-scroll::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 4px;
    }

    .difficult-notes-scroll::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 4px;
    }

    .difficult-notes-scroll::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .empty-state {
      width: 100%;
      padding: 3rem 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      color: rgba(255, 255, 255, 0.5);
      text-align: center;
    }

    .empty-state svg {
      opacity: 0.3;
    }

    .empty-state p {
      font-size: 0.95rem;
      font-weight: 500;
      margin: 0;
    }

    .note-accuracy {
      position: absolute;
      bottom: 0.75rem;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(4px);
      padding: 0.375rem 0.75rem;
      border-radius: 12px;
      font-size: 0.75rem;
      font-weight: 700;
      color: #fff;
      white-space: nowrap;
    }

    .note-card-container {
      flex-shrink: 0;
      width: 200px;
      height: 240px;
      perspective: 1000px;
      cursor: pointer;
    }

    .note-card-inner {
      position: relative;
      width: 100%;
      height: 100%;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }

    .note-card-container.flipped .note-card-inner {
      transform: rotateY(180deg);
    }

    .note-card-front,
    .note-card-back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 16px;
      border: 2px solid rgba(255, 255, 255, 0.1);
      padding: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .note-card-container:hover .note-card-front,
    .note-card-container:hover .note-card-back {
      border-color: rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .note-card-back {
      transform: rotateY(180deg);
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.3) 0%, rgba(139, 92, 246, 0.3) 100%);
      flex-direction: column;
      gap: 1rem;
    }

    .note-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: rgba(255, 255, 255, 0.9);
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .fingering-display {
      font-size: 2rem;
      font-weight: 900;
      color: white;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
      letter-spacing: 0.1em;
    }

    .note-image {
      width: calc(100% - 1rem);
      height: calc(100% - 1rem);
      object-fit: contain;
      background: white;
      border-radius: 12px;
      padding: 0.75rem;
    }

    .practice-hard-notes-btn {
      width: 100%;
      margin-top: 1.5rem;
      padding: 1rem 1.5rem;
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      border: 2px solid rgba(255, 255, 255, 0.2);
      border-radius: 14px;
      color: white;
      font-size: 1rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .practice-hard-notes-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
      border-color: rgba(255, 255, 255, 0.4);
    }

    .practice-hard-notes-btn:active {
      transform: translateY(0);
    }

    .practice-hard-notes-btn svg {
      flex-shrink: 0;
    }

    /* Learning Mode Progress Styles */
    .learning-mode-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .learning-mode-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 14px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
    }

    .learning-mode-item:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.2);
    }

