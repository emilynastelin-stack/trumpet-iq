    .goal-info {
      flex: 1;
    }

    .goal-remove-btn {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.3);
      color: #ef4444;
      font-size: 1.25rem;
      display: flex;
      align-items: center;
      justify-content: center;
