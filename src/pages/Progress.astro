  function addSmartClickListener(element, handler) {
    if (!element) {
      console.warn('addSmartClickListener: element is null/undefined');
      return;
    }
    
    let touchHandled = false;
    const elementInfo = element.className || element.id || 'unknown';
    
    // Touch events for mobile - use touchstart for better responsiveness
    element.addEventListener('touchstart', (e) => {
      element.classList.add('touching');
      console.log(`[Touch] touchstart on ${elementInfo}`);
    }, { passive: true });
    
    element.addEventListener('touchend', (e) => {
      const now = Date.now();
      element.classList.remove('touching');
      
      console.log(`[Touch] touchend on ${elementInfo}, time since last: ${now - lastTouchTime}ms`);
      
      if (now - lastTouchTime < TOUCH_DEBOUNCE_MS) {
        e.preventDefault();
        e.stopPropagation();
        console.log(`[Touch] Debounced ${elementInfo}`);
        return;
      }
      lastTouchTime = now;
      touchHandled = true;
      
      console.log(`[Touch] Executing handler for ${elementInfo}`);
      handler(e);
      
      // Reset after a delay
      setTimeout(() => { 
        touchHandled = false; 
        console.log(`[Touch] Reset touchHandled for ${elementInfo}`);
      }, TOUCH_DEBOUNCE_MS);
    }, { passive: false });
    
    // Click events for desktop/fallback
    element.addEventListener('click', (e) => {
      const now = Date.now();
      console.log(`[Click] on ${elementInfo}, touchHandled: ${touchHandled}, time since touch: ${now - lastTouchTime}ms`);
      
      // Prevent double-firing if touch already handled
      if (touchHandled && now - lastTouchTime < TOUCH_DEBOUNCE_MS) {
        e.preventDefault();
        e.stopPropagation();
        console.log(`[Click] Prevented (touch already handled) ${elementInfo}`);
        return;
      }
      console.log(`[Click] Executing handler for ${elementInfo}`);
