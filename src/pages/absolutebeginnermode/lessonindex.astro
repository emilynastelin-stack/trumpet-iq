---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Your Learning Path">
  <div class="lesson-index-page">
    
    <!-- Header -->
    <div class="header">
      <a href="./index.html" class="back-btn">‚Üê Back</a>
      <h1>Your Learning Path</h1>
      <p class="subtitle">Master trumpet one step at a time</p>
    </div>

    <!-- Level 1 - Unlocked -->
    <section class="level-section unlocked">
      <div class="level-header">
        <div class="level-badge">
          <div class="level-icon">üé∫</div>
          <div class="level-number">Level 1</div>
        </div>
        <div class="level-info">
          <h2 class="level-title">First Steps</h2>
          <p class="level-description">Learn your first notes</p>
        </div>
      </div>

      <div class="lessons-container">
        <!-- Lesson 1 - G, F, E -->
        <a href="./lesson1/index.html" class="lesson-card unlocked">
          <div class="lesson-content">
            <div class="lesson-number">1</div>
            <div class="lesson-info">
              <h3 class="lesson-title">First Three Notes</h3>
              <div class="lesson-notes">
                <span class="note-badge">G</span>
                <span class="note-badge">F</span>
                <span class="note-badge">E</span>
              </div>
            </div>
          </div>
          <div class="lesson-progress">
            <div class="progress-ring">
              <svg width="40" height="40">
                <circle cx="20" cy="20" r="16" class="ring-bg"></circle>
                <circle cx="20" cy="20" r="16" class="ring-progress" id="lesson1Progress"></circle>
              </svg>
              <div class="progress-text" id="lesson1Text">Start</div>
            </div>
          </div>
        </a>

        <!-- Lesson 2 - D, C, B + review -->
        <a href="./lesson2/index.html" class="lesson-card unlocked">
          <div class="lesson-content">
            <div class="lesson-number">2</div>
            <div class="lesson-info">
              <h3 class="lesson-title">Three More Notes</h3>
              <div class="lesson-notes">
                <span class="note-badge">D</span>
                <span class="note-badge">C</span>
                <span class="note-badge">B</span>
              </div>
            </div>
          </div>
          <div class="lesson-progress">
            <div class="progress-ring">
              <svg width="40" height="40">
                <circle cx="20" cy="20" r="16" class="ring-bg"></circle>
                <circle cx="20" cy="20" r="16" class="ring-progress" id="lesson2Progress"></circle>
              </svg>
              <div class="progress-text" id="lesson2Text">Start</div>
            </div>
          </div>
        </a>
      </div>
    </section>

    <!-- Level 2 - Locked -->
    <section class="level-section locked">
      <div class="level-header">
        <div class="level-badge">
          <div class="level-icon">üîí</div>
          <div class="level-number">Level 2</div>
        </div>
        <div class="level-info">
          <h2 class="level-title">Building Skills</h2>
          <p class="level-description">Complete Level 1 to unlock</p>
        </div>
      </div>

      <div class="lessons-container">
        <div class="lesson-card locked">
          <div class="lesson-content">
            <div class="lesson-number">3</div>
            <div class="lesson-info">
              <h3 class="lesson-title">Coming Soon</h3>
              <div class="lesson-notes">
                <span class="note-badge locked">?</span>
                <span class="note-badge locked">?</span>
                <span class="note-badge locked">?</span>
              </div>
            </div>
          </div>
          <div class="lesson-lock">üîí</div>
        </div>
      </div>
    </section>

    <!-- Level 3 - Locked -->
    <section class="level-section locked">
      <div class="level-header">
        <div class="level-badge">
          <div class="level-icon">üîí</div>
          <div class="level-number">Level 3</div>
        </div>
        <div class="level-info">
          <h2 class="level-title">Advanced Practice</h2>
          <p class="level-description">Complete Level 2 to unlock</p>
        </div>
      </div>

      <div class="lessons-container">
        <div class="lesson-card locked">
          <div class="lesson-content">
            <div class="lesson-number">4</div>
            <div class="lesson-info">
              <h3 class="lesson-title">Coming Soon</h3>
              <div class="lesson-notes">
                <span class="note-badge locked">?</span>
                <span class="note-badge locked">?</span>
                <span class="note-badge locked">?</span>
              </div>
            </div>
          </div>
          <div class="lesson-lock">üîí</div>
        </div>
      </div>
    </section>

  </div>

  <style>
    * {
      box-sizing: border-box;
    }

    .lesson-index-page {
      min-height: 100vh;
      width: 100%;
      padding: max(1rem, env(safe-area-inset-top)) 1rem max(5rem, env(safe-area-inset-bottom));
      background: linear-gradient(to bottom, #0f172a 0%, #1e293b 100%);
      font-family: "Inter", system-ui, sans-serif;
    }

    .header {
      text-align: center;
      margin-bottom: 2rem;
      position: relative;
    }

    .back-btn {
      position: absolute;
      left: 0;
      top: 0;
      padding: 0.5rem 1rem;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 12px;
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem;
      transition: all 0.2s ease;
    }

    .back-btn:hover {
      background: rgba(255, 255, 255, 0.15);
      transform: translateX(-2px);
    }

    .header h1 {
      font-size: 2rem;
      font-weight: 900;
      color: white;
      margin: 0 0 0.5rem 0;
      letter-spacing: -0.02em;
    }

    .subtitle {
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.6);
      margin: 0;
    }

    /* Level Section */
    .level-section {
      margin-bottom: 2.5rem;
    }

    .level-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.25rem;
      padding: 1.25rem;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
    }

    .level-badge {
      flex-shrink: 0;
      text-align: center;
    }

    .level-icon {
      font-size: 2.5rem;
      line-height: 1;
      margin-bottom: 0.25rem;
    }

    .level-number {
      font-size: 0.75rem;
      font-weight: 700;
      color: rgba(255, 255, 255, 0.6);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .level-info {
      flex: 1;
    }

    .level-title {
      font-size: 1.5rem;
      font-weight: 800;
      color: white;
      margin: 0 0 0.25rem 0;
      letter-spacing: -0.01em;
    }

    .level-description {
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.6);
      margin: 0;
    }

    /* Locked Level */
    .level-section.locked .level-header {
      opacity: 0.5;
    }

    .level-section.locked .level-title {
      color: rgba(255, 255, 255, 0.7);
    }

    /* Lessons Container */
    .lessons-container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-left: 1rem;
      border-left: 3px solid rgba(255, 255, 255, 0.1);
    }

    /* Lesson Card */
    .lesson-card {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(20px);
      border: 2px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      text-decoration: none;
      transition: all 0.3s ease;
      position: relative;
    }

    .lesson-card.unlocked {
      cursor: pointer;
    }

    .lesson-card.unlocked:hover {
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(16, 185, 129, 0.5);
      transform: translateX(4px);
      box-shadow: 0 4px 20px rgba(16, 185, 129, 0.2);
    }

    .lesson-card.unlocked:active {
      transform: translateX(2px) scale(0.98);
    }

    .lesson-card.locked {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .lesson-content {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex: 1;
    }

    .lesson-number {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: 900;
      color: white;
      flex-shrink: 0;
    }

    .lesson-card.locked .lesson-number {
      background: rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.4);
    }

    .lesson-info {
      flex: 1;
    }

    .lesson-title {
      font-size: 1.1rem;
      font-weight: 700;
      color: white;
      margin: 0 0 0.5rem 0;
    }

    .lesson-card.locked .lesson-title {
      color: rgba(255, 255, 255, 0.5);
    }

    .lesson-notes {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .note-badge {
      padding: 0.25rem 0.75rem;
      background: rgba(16, 185, 129, 0.2);
      border: 1px solid rgba(16, 185, 129, 0.3);
      border-radius: 8px;
      font-size: 0.85rem;
      font-weight: 700;
      color: #10b981;
    }

    .note-badge.locked {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.3);
    }

    /* Progress Ring */
    .lesson-progress {
      flex-shrink: 0;
    }

    .progress-ring {
      position: relative;
      width: 40px;
      height: 40px;
    }

    .progress-ring svg {
      transform: rotate(-90deg);
    }

    .ring-bg {
      fill: none;
      stroke: rgba(255, 255, 255, 0.1);
      stroke-width: 3;
    }

    .ring-progress {
      fill: none;
      stroke: #10b981;
      stroke-width: 3;
      stroke-linecap: round;
      stroke-dasharray: 100;
      stroke-dashoffset: 100;
      transition: stroke-dashoffset 0.8s ease;
    }

    .progress-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 0.65rem;
      font-weight: 700;
      color: white;
      text-align: center;
    }

    .lesson-lock {
      font-size: 1.5rem;
      opacity: 0.4;
    }

    /* Mobile Responsive */
    @media (max-width: 640px) {
      .header h1 {
        font-size: 1.5rem;
      }

      .level-header {
        padding: 1rem;
      }

      .level-icon {
        font-size: 2rem;
      }

      .level-title {
        font-size: 1.25rem;
      }

      .lesson-card {
        padding: 1rem;
      }

      .lesson-number {
        width: 40px;
        height: 40px;
        font-size: 1.25rem;
      }

      .lesson-title {
        font-size: 1rem;
      }
    }
  </style>

  <script>
    // Check lesson completion status from localStorage
    function updateLessonProgress() {
      const lesson1Complete = localStorage.getItem('lesson1-complete') === 'true';
      const lesson2Complete = localStorage.getItem('lesson2-complete') === 'true';

      // Update Lesson 1 progress
      const lesson1Progress = document.getElementById('lesson1Progress');
      const lesson1Text = document.getElementById('lesson1Text');
      if (lesson1Progress && lesson1Text) {
        if (lesson1Complete) {
          lesson1Progress.style.strokeDashoffset = '0';
          lesson1Text.textContent = '‚úì';
          lesson1Text.style.color = '#10b981';
        }
      }

      // Update Lesson 2 progress
      const lesson2Progress = document.getElementById('lesson2Progress');
      const lesson2Text = document.getElementById('lesson2Text');
      if (lesson2Progress && lesson2Text) {
        if (lesson2Complete) {
          lesson2Progress.style.strokeDashoffset = '0';
          lesson2Text.textContent = '‚úì';
          lesson2Text.style.color = '#10b981';
        }
      }
    }

    // Run on page load
    updateLessonProgress();

    // Also listen for storage changes (in case completion happens in another tab)
    window.addEventListener('storage', updateLessonProgress);
  </script>
</Layout>
