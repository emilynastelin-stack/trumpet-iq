---

<div id="usersettings-overlay" class="usersettings-overlay">
  <div class="overlay-backdrop"></div>
  <div class="usersettings-panel">
    <div class="panel-header">
      <h3 class="panel-title">Settings</h3>
      <button class="close-btn" id="usersettings-close" type="button" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <div class="panel-body">
      <div class="settings-section">
        <h4 class="section-title">Player Mode</h4>
        <p class="section-description">
          Beginner Mode is designed for students learning to read/play. Advanced Mode unlocks transposition features for intermediate and professional players.
        </p>
        
        <div class="setting-row">
          <div class="setting-info">
            <label for="beginner-mode-toggle" class="setting-label">Beginner Mode</label>
            <p class="setting-hint">Keeps it simple for students</p>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="beginner-mode-toggle" />
            <span class="toggle-slider"></span>
          </label>
        </div>
        <p class="mode-note">
          <strong>Advanced Mode</strong> shows transposition controls to practice playing in different keys.
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Transposition Warning Modal -->
<div id="transposition-warning" class="warning-modal">
  <div class="warning-backdrop"></div>
  <div class="warning-content">
    <div class="warning-icon">⚠️</div>
    <h3 class="warning-title">Switch to Advanced Mode?</h3>
    <p class="warning-text">
      Advanced Mode unlocks transposition controls, allowing you to practice reading in different keys. 
      This will <strong>change the fingerings</strong> displayed for each note based on your chosen transposition.
    </p>
    <p class="warning-subtext">
      This feature is for intermediate/advanced players. Beginners should keep Beginner Mode enabled.
    </p>
    
    <label class="warning-checkbox">
      <input type="checkbox" id="dont-show-warning" />
      <span>Don't show this warning again</span>
    </label>
    
    <div class="warning-actions">
      <button id="warning-cancel" class="warning-btn warning-btn-cancel">Stay in Beginner Mode</button>
      <button id="warning-confirm" class="warning-btn warning-btn-confirm">Switch to Advanced Mode</button>
    </div>
  </div>
</div>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const overlay = document.getElementById('usersettings-overlay');
    const closeBtn = document.getElementById('usersettings-close');
    const backdrop = overlay?.querySelector('.overlay-backdrop');

    function openPanel() {
      if (overlay) {
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    }

    function closePanel() {
      if (overlay) {
        overlay.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    function togglePanel() {
      if (overlay?.classList.contains('active')) {
        closePanel();
      } else {
        openPanel();
      }
    }

    // Footer settings toggle button - use setTimeout to ensure button exists
    setTimeout(() => {
      const toggleBtn = document.getElementById('settings-toggle');
      if (toggleBtn) {
        toggleBtn.addEventListener('click', togglePanel);
      }
    }, 100);

    // Close button
    if (closeBtn) {
      closeBtn.addEventListener('click', closePanel);
    }

    // Listen for custom events
    window.addEventListener('usersettings:open', openPanel);
    window.addEventListener('usersettings:close', closePanel);
    window.addEventListener('usersettings:toggle', togglePanel);

    // Click backdrop to close
    if (backdrop) {
      backdrop.addEventListener('click', closePanel);
    }

    // Escape key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay?.classList.contains('active')) {
        closePanel();
      }
    });

    // Transposition toggle logic
    const transpositionToggle = document.getElementById('beginner-mode-toggle') as HTMLInputElement;
    const warningModal = document.getElementById('transposition-warning');
    const warningBackdrop = warningModal?.querySelector('.warning-backdrop');
    const warningCancel = document.getElementById('warning-cancel');
    const warningConfirm = document.getElementById('warning-confirm');
    const dontShowWarning = document.getElementById('dont-show-warning') as HTMLInputElement;

    // Check if transposition is enabled in localStorage (default is disabled/beginner mode)
    const isTranspositionEnabled = localStorage.getItem('transposition-enabled') === 'true';
    const shouldShowWarning = localStorage.getItem('transposition-warning-dismissed') !== 'true';
    
    // Beginner Mode toggle is inverse of transposition enabled
    if (transpositionToggle) {
      transpositionToggle.checked = !isTranspositionEnabled; // Checked = Beginner Mode ON
    }

    // Apply initial state
    updateTranspositionState(isTranspositionEnabled);

    // Handle toggle change
    if (transpositionToggle) {
      transpositionToggle.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        if (target.checked) {
          // Turning ON Beginner Mode = disable transposition
          disableTransposition();
        } else {
          // Turning OFF Beginner Mode = enable transposition (Advanced Mode)
          if (shouldShowWarning) {
            // Show warning modal
            warningModal?.classList.add('active');
            document.body.style.overflow = 'hidden';
            // Check back temporarily until confirmed
            target.checked = true;
          } else {
            // Already dismissed warning, enable directly
            enableTransposition();
          }
        }
      });
    }

    // Warning modal handlers
    if (warningCancel) {
      warningCancel.addEventListener('click', () => {
        warningModal?.classList.remove('active');
        document.body.style.overflow = '';
        if (transpositionToggle) transpositionToggle.checked = true; // Stay in Beginner Mode
      });
    }

    if (warningConfirm) {
      warningConfirm.addEventListener('click', () => {
        // Save preference if checkbox is checked
        if (dontShowWarning?.checked) {
          localStorage.setItem('transposition-warning-dismissed', 'true');
        }
        // Enable transposition (turn OFF beginner mode)
        enableTransposition();
        if (transpositionToggle) transpositionToggle.checked = false; // Uncheck Beginner Mode
        // Close modal
        warningModal?.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    if (warningBackdrop) {
      warningBackdrop.addEventListener('click', () => {
        warningModal?.classList.remove('active');
        document.body.style.overflow = '';
        if (transpositionToggle) transpositionToggle.checked = true; // Stay in Beginner Mode
      });
    }

    function enableTransposition() {
      localStorage.setItem('transposition-enabled', 'true');
      updateTranspositionState(true);
      // Dispatch event to notify other components
      window.dispatchEvent(new CustomEvent('transposition:enabled', { detail: { enabled: true } }));
    }

    function disableTransposition() {
      localStorage.setItem('transposition-enabled', 'false');
      updateTranspositionState(false);
      // Dispatch event to notify other components
      window.dispatchEvent(new CustomEvent('transposition:enabled', { detail: { enabled: false } }));
    }

    function updateTranspositionState(enabled: boolean) {
      // Update button visibility - TranspositionControls handles locked state internally
      const transpositionToggleBtn = document.getElementById('transposition-toggle');
      
      if (enabled) {
        // Advanced Mode - show transposition button
        if (transpositionToggleBtn) {
          transpositionToggleBtn.style.display = '';
        }
      } else {
        // Beginner Mode - hide transposition button completely
        if (transpositionToggleBtn) {
          transpositionToggleBtn.style.display = 'none';
        }
      }
    }
  });
</script>

