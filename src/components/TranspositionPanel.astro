<!-- TranspositionPanel.astro -->
<!-- Overlay panel that deploys the transposition controls -->
---
import TranspositionControls from './TranspositionControls.astro';
---

<div id="transposition-overlay" class="transposition-overlay">
  <div class="overlay-backdrop"></div>
  <div class="transposition-panel">
    <div class="panel-header">
      <h3 class="panel-title">Transposition</h3>
      <button class="close-btn" id="panel-close-btn" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <div class="panel-body">
      <TranspositionControls 
        id="panel" 
        showHeader={false}
        showRandomize={true}
        compact={false}
      />
      
      <div class="state-display">
        Playing in <strong id="panel-state-key">C</strong> on <strong id="panel-state-instrument">Bb Trumpet</strong>
      </div>
    </div>
  </div>
</div>

<!-- Global state manager script -->
<script is:inline>
  // Global transposition state manager
  if (!window.TranspositionState) {
    window.TranspositionState = {
      current: {
        instrument: 'Bb',
        key: 'C'
      },
      
      update(data) {
        const { instrument, key, source } = data;
        
        if (instrument) this.current.instrument = instrument;
        if (key) this.current.key = key;
        
        // Broadcast to all controls except source
        window.dispatchEvent(new CustomEvent('transposition:sync', {
          detail: { instrument: this.current.instrument, key: this.current.key, source }
        }));
        
        // Update state displays
        this.updateDisplays();
      },
      
      updateDisplays() {
        // Update all state displays on the page
        document.querySelectorAll('[id$="-state-key"]').forEach(el => {
          el.textContent = this.current.key;
        });
        
        document.querySelectorAll('[id$="-state-instrument"]').forEach(el => {
          el.textContent = `${this.current.instrument} Trumpet`;
        });
      }
    };
  }
</script>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const overlay = document.getElementById('transposition-overlay');
    const toggleBtn = document.getElementById('transposition-toggle');
    const closeBtn = document.getElementById('panel-close-btn');
    const backdrop = overlay?.querySelector('.overlay-backdrop');
    let panelLocked = false; // Prevent auto-opening after mode change

    function openPanel() {
      console.log('[transposition-panel] Opening panel, locked:', panelLocked);
      if (overlay && !panelLocked) {
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
        console.log('[transposition-panel] Panel opened, classes:', overlay.className);
        
        // Debug - check if elements are visible
        setTimeout(() => {
          const closeBtn = document.getElementById('panel-close-btn');
          const randomizeBtn = document.getElementById('randomize-panel');
          console.log('[transposition-panel] Close button exists:', !!closeBtn);
          console.log('[transposition-panel] Randomize button exists:', !!randomizeBtn);
          if (closeBtn) {
            const rect = closeBtn.getBoundingClientRect();
            console.log('[transposition-panel] Close button position:', rect);
          }
        }, 500);
      } else {
        console.log('[transposition-panel] Cannot open - overlay missing or locked');
      }
    }

    function closePanel() {
      console.log('[transposition-panel] Closing panel');
      if (overlay) {
        overlay.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    function togglePanel() {
      // Ignore if panel is locked (mode just changed)
      if (panelLocked) {
        console.log('Panel locked, ignoring toggle');
        return;
      }
      
      console.log('[transposition-panel] Toggling panel, current state:', overlay?.classList.contains('active'));
      if (overlay?.classList.contains('active')) {
        closePanel();
      } else {
        openPanel();
      }
    }

    // Attach click handler to transposition button with retries
    let buttonAttached = false;
    let warnedMissing = false;
    function attachButtonHandler() {
      if (buttonAttached) return;
      
      const btn = document.getElementById('transposition-toggle');
      if (btn) {
        console.log('✅ Attached click handler to transposition button');
        btn.addEventListener('click', togglePanel);
        buttonAttached = true;
      } else {
        if (!warnedMissing) {
          console.log('⚠️ Transposition button not found, will retry...');
          warnedMissing = true;
        }
      }
    }

    // Try immediately
    attachButtonHandler();
    
    // Try after 100ms
    setTimeout(attachButtonHandler, 100);
    
    // Try after 300ms
    setTimeout(attachButtonHandler, 300);
    
    // Try after 500ms
    setTimeout(attachButtonHandler, 500);
    
    // Also observe DOM for button appearance
    const observer = new MutationObserver(() => {
      if (!buttonAttached) {
        attachButtonHandler();
      }
    });
    
    observer.observe(document.body, {
      childList: true,
      subtree: true
    });
    
    // Stop observing after 2 seconds
    setTimeout(() => observer.disconnect(), 2000);

    // Listen for custom events to open panel
    window.addEventListener('transposition:open', openPanel);
    window.addEventListener('transposition:close', closePanel);
    window.addEventListener('transposition:toggle', togglePanel);

    // Lock panel when mode changes, unlock after delay
    window.addEventListener('transposition:enabled', (e) => {
      console.log('Mode changed, locking panel for 500ms');
      panelLocked = true;
      closePanel(); // Close panel if it's open
      
      // Unlock after 500ms
      setTimeout(() => {
        panelLocked = false;
        console.log('Panel unlocked');
      }, 500);
    });

    // Click close button to close
    if (closeBtn) {
      console.log('[transposition-panel] Close button found, attaching handler');
      
      // Handle touch events directly (iOS doesn't always generate click events)
      let touchStartY = 0;
      let touchStartX = 0;
      
      closeBtn.addEventListener('touchstart', (e) => {
        console.log('[transposition-panel] Close button touched');
        touchStartY = e.touches[0].clientY;
        touchStartX = e.touches[0].clientX;
      }, { passive: true });
      
      closeBtn.addEventListener('touchend', (e) => {
        const touchEndY = e.changedTouches[0].clientY;
        const touchEndX = e.changedTouches[0].clientX;
        const deltaY = Math.abs(touchEndY - touchStartY);
        const deltaX = Math.abs(touchEndX - touchStartX);
        
        // Only close if it was a tap, not a swipe
        if (deltaY < 10 && deltaX < 10) {
          console.log('[transposition-panel] Close button tapped, closing panel');
          closePanel();
        } else {
          console.log('[transposition-panel] Touch moved too much, ignoring');
        }
      }, { passive: true });
      
      // Also keep click handler for desktop
      closeBtn.addEventListener('click', (e) => {
        console.log('[transposition-panel] Close button clicked');
        e.preventDefault();
        e.stopPropagation();
        closePanel();
      });
    } else {
      console.warn('[transposition-panel] Close button not found!');
    }
    
    // Debug - add touch listener to entire panel
    const panel = overlay?.querySelector('.transposition-panel');
    if (panel) {
      panel.addEventListener('touchstart', (e) => {
        console.log('[transposition-panel] Panel touched at:', e.touches[0].clientX, e.touches[0].clientY);
      }, { passive: true });
      
      panel.addEventListener('click', (e) => {
        console.log('[transposition-panel] Panel clicked at:', e.clientX, e.clientY);
      });
    }

    // Click backdrop to close
    if (backdrop) {
      backdrop.addEventListener('click', (e) => {
        console.log('[transposition-panel] Backdrop clicked');
        closePanel();
      });
    }

    // Escape key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay?.classList.contains('active')) {
        closePanel();
      }
    });
  });
</script>

<style>
  .transposition-overlay {
    position: fixed;
    inset: 0;
    z-index: 9999999;
    display: none;
    align-items: flex-end;
    justify-content: center;
    pointer-events: none;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0s linear 0.3s;
  }

  .transposition-overlay.active {
    display: flex;
    pointer-events: auto;
    opacity: 1;
    visibility: visible;
    transition-delay: 0s;
  }

  .overlay-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(8px);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
    pointer-events: auto;
  }

  .transposition-overlay.active .overlay-backdrop {
    opacity: 1;
  }

  .transposition-panel {
    position: relative;
    width: 100%;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(30px) saturate(180%);
    border-radius: 24px 24px 0 0;
    box-shadow: 
      0 -8px 32px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 1);
    border: 1px solid rgba(226, 232, 240, 0.8);
    border-bottom: none;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    max-height: 70vh;
    overflow-y: auto;
    pointer-events: auto;
    z-index: 100;
  }

  .transposition-overlay.active .transposition-panel {
    transform: translateY(0);
  }

  .panel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24px 24px 16px;
    border-bottom: 2px solid #e2e8f0;
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    z-index: 1;
  }

  .panel-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 800;
    color: #1e293b;
    letter-spacing: -0.02em;
  }

  .close-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    background: rgba(100, 116, 139, 0.1);
    border: 1.5px solid rgba(100, 116, 139, 0.2);
    border-radius: 12px;
    color: #64748b;
    cursor: pointer;
    transition: all 0.2s ease;
    -webkit-tap-highlight-color: transparent;
    pointer-events: auto;
    position: relative;
    z-index: 100;
    touch-action: manipulation;
  }

  .close-btn:hover {
    background: rgba(100, 116, 139, 0.15);
    border-color: rgba(100, 116, 139, 0.3);
    color: #475569;
    transform: scale(1.05);
  }

  .close-btn:active {
    transform: scale(0.95);
    background: rgba(100, 116, 139, 0.2);
  }

  .panel-body {
    padding: 24px;
    pointer-events: auto;
    position: relative;
    z-index: 1;
  }

  /* State Display */
  .state-display {
    margin-top: 24px;
    padding: 16px;
    background: #f8fafc;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 0.875rem;
    color: #64748b;
    text-align: center;
  }

  .state-display strong {
    color: #1e293b;
    font-weight: 700;
  }

  /* Mobile optimization */
  @media (max-width: 640px) {
    .transposition-panel {
      max-width: 100%;
      max-height: 75vh;
    }

    .panel-header {
      padding: 20px 20px 14px;
    }

    .panel-title {
      font-size: 1.25rem;
    }

    .panel-body {
      padding: 20px;
    }
  }

  /* Safe area for notched devices */
  @supports (padding: max(0px)) {
    .transposition-panel {
      padding-bottom: env(safe-area-inset-bottom);
    }
  }

  /* Scrollbar styling */
  .transposition-panel::-webkit-scrollbar {
    width: 8px;
  }

  .transposition-panel::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
  }

  .transposition-panel::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
  }

  .transposition-panel::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.3);
  }



  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .transposition-overlay,
    .overlay-backdrop,
    .transposition-panel,
    .close-btn {
      transition: none !important;
    }
  }
</style>