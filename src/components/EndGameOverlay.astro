---
interface Props {
  visible?: boolean;
  score?: number;
}

const { visible = false, score = 0 } = Astro.props;
---

<div id="endgame-overlay" class={`overlay ${visible ? 'show' : 'hide'}`} role="dialog" aria-modal="true" aria-labelledby="endgame-title">
  <div class="overlay-box">
    <div class="content-panel">
      <!-- Header -->
      <div class="header-section">
        <h2 id="endgame-title">Game Over!</h2>
        
        <!-- Star rating display -->
        <div class="stars-container" role="img" aria-label="Star rating">
          <div class="stars-box">
            <svg class="star-icon filled star-1" width="52" height="52" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#fbbf24" stroke="#f59e0b" stroke-width="1.5"/>
            </svg>
            <svg class="star-icon filled star-2" width="52" height="52" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#fbbf24" stroke="#f59e0b" stroke-width="1.5"/>
            </svg>
            <svg class="star-icon filled star-3" width="52" height="52" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#fbbf24" stroke="#f59e0b" stroke-width="1.5"/>
            </svg>
          </div>
        </div>

        <!-- Score display -->
        <div class="score-section">
          <p class="score-label">Your Score</p>
          <p id="endgame-score" class="score-value">0%</p>
          <p class="score-message">Keep practicing!</p>
        </div>
      </div>

      <!-- Action buttons -->
      <div class="button-section">
        <button id="endgame-retry" type="button" class="action-btn primary-btn">
          <svg class="btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12a9 9 0 1 1-9-9c2.52 0 4.93 1 6.74 2.74L21 8"/>
            <path d="M21 3v5h-5"/>
          </svg>
          <span class="btn-text">Try Again</span>
        </button>
        
        <a id="endgame-quit" href="#" class="action-btn secondary-btn">
          <svg class="btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          <span class="btn-text">Level Select</span>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const overlay = document.getElementById('endgame-overlay');
    const retryBtn = document.getElementById('endgame-retry');
    const quitBtn = document.getElementById('endgame-quit');
    
    if (!overlay) return;

    // Set quit button URL
    const pathParts = window.location.pathname.split('/');
    const mode = pathParts[2] || 'learning';
    if (quitBtn) {
      (quitBtn as HTMLAnchorElement).href = `/level/${mode}`;
    }

    // Retry button handler
    if (retryBtn) {
      retryBtn.addEventListener('click', () => {
        window.location.reload();
      });
    }

    // Watch for overlay to become visible
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.attributeName === 'class') {
          const isVisible = overlay.classList.contains('show');
          if (isVisible) {
            animateContent();
          }
        }
      });
    });

    observer.observe(overlay, { attributes: true });

    function animateContent() {
      if (!overlay) return;
      // Animate stars based on score
      const scoreText = overlay.querySelector('.score-value')?.textContent || '0%';
      const scoreNum = parseInt(scoreText);
      
      const stars = overlay.querySelectorAll('.star-icon.filled');
      const starsToShow = scoreNum >= 80 ? 3 : scoreNum >= 50 ? 2 : 1;
      
      stars.forEach((star, index) => {
        const el = star as HTMLElement;
        el.style.animation = 'none';
        
        if (index < starsToShow) {
          setTimeout(() => {
            el.style.animation = `starPop 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) ${index * 0.15}s forwards`;
          }, 10);
        } else {
          el.classList.remove('filled');
          el.classList.add('empty');
          el.querySelector('path')?.setAttribute('fill', 'rgba(255,255,255,0.15)');
          el.querySelector('path')?.setAttribute('stroke', 'rgba(255,255,255,0.3)');
        }
      });

      // Animate score
      const scoreValue = overlay.querySelector('.score-value');
      const scoreMessage = overlay.querySelector('.score-message');
      
      if (scoreValue) {
        (scoreValue as HTMLElement).style.animation = 'none';
        setTimeout(() => {
          (scoreValue as HTMLElement).style.animation = 'scoreReveal 0.7s cubic-bezier(0.34, 1.56, 0.64, 1) 0.5s forwards';
        }, 10);
      }

      if (scoreMessage) {
        const msg = scoreNum >= 80 ? 'Excellent!' : scoreNum >= 50 ? 'Good job!' : 'Keep practicing!';
        scoreMessage.textContent = msg;
        (scoreMessage as HTMLElement).style.animation = 'none';
        setTimeout(() => {
          (scoreMessage as HTMLElement).style.animation = 'fadeIn 0.5s ease 0.8s forwards';
        }, 10);
      }

      // Animate buttons
      const buttons = overlay.querySelectorAll('.action-btn');
      buttons.forEach((btn, index) => {
        const el = btn as HTMLElement;
        el.style.animation = 'none';
        setTimeout(() => {
          el.style.animation = `slideInUp 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) ${0.6 + index * 0.1}s forwards`;
        }, 10);
      });
    }

    // Listen for game end event
    window.addEventListener('game:end', (ev) => {
      if (!(ev instanceof CustomEvent)) return;
      const detail = ev.detail || {};
      const score = typeof detail.score === 'number' ? detail.score : 0;
      const total = typeof detail.total === 'number' && detail.total > 0 ? detail.total : 1;
      const pct = Math.round((score / total) * 100);
      
      const scoreEl = overlay.querySelector('.score-value');
      if (scoreEl) {
        scoreEl.textContent = `${pct}%`;
      }
      
      overlay.classList.remove('hide');
      overlay.classList.add('show');
    });
  });
</script>

<style>
  /* Overlay backdrop */
  .overlay {
    position: fixed;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(12px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease, backdrop-filter 0.4s ease;
    z-index: 1000;
  }

  .overlay.show { 
    opacity: 1; 
    pointer-events: auto; 
  }

  .overlay.hide { 
    opacity: 0; 
    pointer-events: none; 
  }

  /* Main container */
  .overlay-box {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
    backdrop-filter: blur(40px) saturate(180%);
    border-radius: 32px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 30px 90px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.6),
      0 0 0 1px rgba(255, 255, 255, 0.1);
    padding: 48px 40px;
    max-width: min(460px, 90vw);
    width: 100%;
    animation: slideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Content panel */
  .content-panel {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  /* Header */
  .header-section {
    text-align: center;
  }

  .content-panel h2 { 
    margin: 0 0 32px 0; 
    font-size: 2.75rem; 
    font-weight: 900;
    color: #ffffff;
    text-shadow: 
      0 2px 20px rgba(0, 0, 0, 0.5),
      0 0 40px rgba(16, 185, 129, 0.3);
    letter-spacing: -0.03em;
  }

  /* Stars container */
  .stars-container {
    margin-bottom: 28px;
  }

  .stars-box {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.15) 0%, rgba(245, 158, 11, 0.15) 100%);
    backdrop-filter: blur(12px);
    border-radius: 24px;
    padding: 24px;
    border: 1.5px solid rgba(251, 191, 36, 0.3);
    box-shadow: 
      0 8px 24px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      0 0 40px rgba(251, 191, 36, 0.2);
  }

  .star-icon {
    filter: drop-shadow(0 4px 12px rgba(251, 191, 36, 0.5));
    transform: scale(0);
    opacity: 0;
  }

  .star-icon.empty {
    transform: scale(1);
    opacity: 0.3;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  @keyframes starPop {
    0% {
      transform: scale(0) rotate(-180deg);
      opacity: 0;
    }
    60% {
      transform: scale(1.3) rotate(15deg);
      opacity: 1;
    }
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  /* Score section */
  .score-section {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.25) 0%, rgba(20, 184, 166, 0.25) 100%);
    backdrop-filter: blur(16px);
    border-radius: 24px;
    padding: 24px 28px;
    border: 2px solid rgba(16, 185, 129, 0.4);
    box-shadow: 
      0 8px 24px rgba(16, 185, 129, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      0 0 40px rgba(16, 185, 129, 0.2);
  }

  .score-label {
    margin: 0 0 8px 0;
    font-size: 0.9rem;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.85);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .score-value {
    margin: 0 0 12px 0;
    font-size: 3.5rem;
    font-weight: 900;
    color: #ffffff;
    text-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.5),
      0 0 30px rgba(16, 185, 129, 0.5);
    letter-spacing: -0.03em;
    opacity: 0;
    transform: translateY(20px) scale(0.8);
  }

  @keyframes scoreReveal {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .score-message {
    margin: 0;
    font-size: 1rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    opacity: 0;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Button section */
  .button-section {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 16px 28px;
    border-radius: 18px;
    font-weight: 800;
    font-size: 1.05rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    text-decoration: none;
    border: none;
    font-family: inherit;
    letter-spacing: 0.025em;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .btn-icon {
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  /* Primary button (Try Again) */
  .primary-btn {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: #ffffff;
    border: 2px solid rgba(255, 255, 255, 0.4);
    box-shadow: 
      0 6px 24px rgba(16, 185, 129, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  }

  .primary-btn:hover {
    transform: translateY(-3px);
    box-shadow: 
      0 10px 32px rgba(16, 185, 129, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.4),
      0 0 30px rgba(16, 185, 129, 0.3);
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
  }

  .primary-btn:hover .btn-icon {
    transform: rotate(-180deg);
  }

  .primary-btn:active { 
    transform: translateY(-1px);
  }

  /* Secondary button (Level Select) */
  .secondary-btn {
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.3) 0%, rgba(71, 85, 105, 0.3) 100%);
    color: rgba(255, 255, 255, 0.95);
    border: 2px solid rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .secondary-btn:hover {
    transform: translateY(-3px);
    background: linear-gradient(135deg, rgba(100, 116, 139, 0.4) 0%, rgba(71, 85, 105, 0.4) 100%);
    border-color: rgba(255, 255, 255, 0.35);
    box-shadow: 
      0 8px 24px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .secondary-btn:hover .btn-icon {
    transform: translateX(-4px);
  }

  .secondary-btn:active { 
    transform: translateY(-1px);
  }

  /* Responsive */
  @media (max-width: 480px) {
    .overlay-box {
      padding: 40px 32px;
    }

    .content-panel h2 {
      font-size: 2.25rem;
      margin-bottom: 24px;
    }

    .stars-box {
      gap: 12px;
      padding: 20px;
    }

    .star-icon {
      width: 44px;
      height: 44px;
    }

    .score-value {
      font-size: 3rem;
    }

    .action-btn {
      padding: 14px 24px;
      font-size: 1rem;
    }
  }

  @media (max-width: 360px) {
    .overlay-box {
      padding: 32px 24px;
    }

    .content-panel h2 {
      font-size: 2rem;
    }

    .stars-box {
      gap: 10px;
      padding: 16px;
    }

    .star-icon {
      width: 40px;
      height: 40px;
    }

    .score-value {
      font-size: 2.5rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .overlay,
    .overlay-box,
    .star-icon,
    .score-value,
    .score-message,
    .action-btn,
    .btn-icon {
      animation: none !important;
      transition: none !important;
    }

    .star-icon.filled {
      transform: scale(1);
      opacity: 1;
    }

    .score-value {
      opacity: 1;
      transform: none;
    }

    .score-message {
      opacity: 1;
    }

    .action-btn {
      opacity: 1;
      transform: none;
    }
  }
</style>