---
const { showTransposition = false, isHomepage = false } = Astro.props || {};

// Determine relative path to index based on current URL depth
const currentPath = Astro.url.pathname;
const depth = currentPath.split('/').filter(p => p).length;
const homeHref = depth === 0 ? './index.html' : '../'.repeat(depth) + 'index.html';
const aboutHref = depth === 0 ? './about/index.html' : '../'.repeat(depth) + 'about/index.html';
const progressHref = depth === 0 ? './Progress/index.html' : '../'.repeat(depth) + 'Progress/index.html';
---
<footer class="footer">
  <div class="footer-bg"></div>
  {showTransposition ? (
    <button id="transposition-toggle" class="footer-btn btn-leftmid transposition-control" type="button" aria-label="Transpose">
      <div class="btn-glass">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15V6M18.5 18a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5ZM12 12H3M16 6H3M12 18H3"/>
        </svg>
      </div>
    </button>
  ) : (
    <button id="settings-toggle" class="footer-btn btn-leftmid" type="button" aria-label="Settings">
      <div class="btn-glass">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
      </div>
    </button>
  )}
  {isHomepage ? (
    <a href={aboutHref} class="footer-btn btn-center" aria-label="About">
      <div class="btn-glass">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <path d="M12 16v-4"/>
          <path d="M12 8h.01"/>
        </svg>
      </div>
    </a>
  ) : (
    <a href={homeHref} class="footer-btn btn-center" aria-label="Home">
      <div class="btn-glass">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
      </div>
    </a>
  )}
  <a href={progressHref} class="footer-btn btn-rightmid" aria-label="View Progress">
    <div class="btn-glass">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
      </svg>
    </div>
  </a>
</footer>

<style>
  .footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 40px;
    height: calc(40px + env(safe-area-inset-bottom, 0px));
    display: block;
    padding: 0;
    padding-bottom: env(safe-area-inset-bottom, 0px);
    z-index: 300500;
    pointer-events: none;
  }

  .footer-bg {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px) saturate(180%);
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 -8px 32px rgba(0, 0, 0, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
    pointer-events: auto;
  }

  .footer-center {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 0;
    display: flex;
    align-items: center;
  }

  .footer-btn {
    background: transparent;
    padding: 0;
    margin: 0;
    border: none;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 50%;
    width: 56px;
    height: 56px;
    margin-top: -28px;
    transform: translateX(-50%);
    pointer-events: auto;
    z-index: 2;
    transition: all 0.12s cubic-bezier(0.4, 0, 0.2, 1);
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
    user-select: none;
    -webkit-user-select: none;
  }

  .btn-glass {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(12px);
    border: 1.5px solid rgba(255, 255, 255, 0.4);
    border-radius: 16px;
    color: #fff;
    cursor: pointer;
    transition: all 0.12s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
  }

  .btn-glass::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(16, 185, 129, 0.4) 0%, 
      rgba(20, 184, 166, 0.4) 50%,
      rgba(251, 146, 60, 0.4) 100%);
    opacity: 0;
    transition: opacity 0.12s ease;
  }

  /* Ripple effect on click */
  .btn-glass::after {
    content: '';
    position: absolute;
    inset: -50%;
    background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, transparent 70%);
    opacity: 0;
    transform: scale(0);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .btn-glass svg {
    position: relative;
    z-index: 1;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    transition: transform 0.12s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hover effects for desktop */
  @media (hover: hover) and (pointer: fine) {
    .footer-btn:hover {
      transform: translateX(-50%) translateY(-3px);
    }

    .footer-btn:hover .btn-glass {
      background: rgba(255, 255, 255, 0.35);
      border-color: rgba(255, 255, 255, 0.6);
      box-shadow: 
        0 8px 28px rgba(0, 0, 0, 0.2),
        0 0 25px rgba(16, 185, 129, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.6);
    }

    .footer-btn:hover .btn-glass::before {
      opacity: 1;
    }

    .footer-btn:hover .btn-glass svg {
      transform: scale(1.1);
    }
  }

  /* Active/pressed state - more dramatic */
  .footer-btn:active,
  .footer-btn.touching {
    transform: translateX(-50%) scale(0.88);
  }

  .footer-btn:active .btn-glass,
  .footer-btn.touching .btn-glass {
    background: rgba(255, 255, 255, 0.35);
    box-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.3),
      inset 0 2px 8px rgba(0, 0, 0, 0.2),
      0 0 20px rgba(16, 185, 129, 0.6);
  }

  .footer-btn:active .btn-glass::before,
  .footer-btn.touching .btn-glass::before {
    opacity: 1;
  }

  .footer-btn:active .btn-glass::after,
  .footer-btn.touching .btn-glass::after {
    opacity: 1;
    transform: scale(1);
  }

  .footer-btn:active .btn-glass svg,
  .footer-btn.touching .btn-glass svg {
    transform: scale(0.9);
  }

  /* Position helpers */
  .btn-leftmid {
    left: 25%;
  }

  .btn-center {
    left: 50%;
  }

  .btn-rightmid {
    left: 75%;
  }

  /* Individual button color accents */
  .btn-leftmid .btn-glass::before {
    background: linear-gradient(135deg, 
      rgba(16, 185, 129, 0.4) 0%, 
      rgba(142, 140, 127, 0.3) 100%);
  }

  .btn-center .btn-glass::before {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.4) 0%, 
      rgba(142, 140, 127, 0.3) 100%);
  }

  .btn-rightmid .btn-glass::before {
    background: linear-gradient(135deg, 
      rgba(142, 140, 127, 0.4) 0%, 
      rgba(16, 185, 129, 0.3) 100%);
  }

  /* Mobile optimization */
  @media (max-width: 640px) {
    .footer {
      height: 36px;
    }
  }

  @media (max-width: 375px) {
    .footer {
      height: 34px;
    }
  }

  /* Safe area insets for notched devices */
  @supports (padding: max(0px)) {
    .footer {
      padding-bottom: env(safe-area-inset-bottom);
      height: calc(40px + env(safe-area-inset-bottom));
    }

    .footer-center {
      padding-bottom: env(safe-area-inset-bottom);
    }
  }

  /* Touch device optimizations - instant feedback with ripple */
  @media (hover: none) and (pointer: coarse) {
    .footer-btn {
      transition: transform 0.08s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn-glass {
      transition: all 0.08s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn-glass::after {
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* More aggressive scale for better feedback */
    .footer-btn:active {
      transform: translateX(-50%) scale(0.85) !important;
    }

    .footer-btn:active .btn-glass {
      background: rgba(255, 255, 255, 0.45) !important;
      border-color: rgba(255, 255, 255, 0.7) !important;
      box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.35),
        inset 0 3px 10px rgba(0, 0, 0, 0.25),
        0 0 30px rgba(16, 185, 129, 0.8) !important;
    }

    .footer-btn:active .btn-glass::before {
      opacity: 1;
    }

    .footer-btn:active .btn-glass::after {
      opacity: 1;
      transform: scale(1.5);
    }

    .footer-btn:active .btn-glass svg {
      transform: scale(0.85);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .footer-btn,
    .btn-glass,
    .btn-glass svg,
    .btn-glass::before,
    .btn-glass::after {
      transition: none !important;
    }
  }
</style>